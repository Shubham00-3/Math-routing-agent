# Let's make sure our .gitignore covers all sensitive files
cat > .gitignore << 'EOF'
# Environment variables (NEVER commit these!)
.env
.env.local
.env.production
.env.development
*.env

# Python
__pycache__/
*.pyc
*.pyo
*.pyd
.Python
venv/
env/
.venv/
*.db
*.sqlite
*.sqlite3

# Node.js
node_modules/
npm-debug.log*
.npm
dist/
build/
.next/

# IDE
.vscode/
.idea/
*.swp
*.swo

# OS
.DS_Store
Thumbs.db

# Logs
*.log
logs/

# Temporary files
*.tmp
*.temp

# Docker
.dockerignore

# Coverage reports
htmlcov/
.coverage
.coverage.*
EOF